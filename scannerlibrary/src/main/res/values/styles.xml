<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/titleBackground</item>
    </style>

    <style name="title_layout.iconLeft" parent="title_layout">
        <item name="android:paddingRight">52dp</item>
    </style>

    <style name="title_layout.iconRight" parent="title_layout">
        <item name="android:paddingLeft">52dp</item>
    </style>

    <style name="title_text_layout">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="title_text_layout.leftFirst">
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="title_text_layout.rightFirst">
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="title_button_layout" parent="title_text_layout">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="title_button_layout.leftFirst" parent="title_button_layout">
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="title_button_layout.rightFirst" parent="title_button_layout">
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="input_edit_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="input_edit_layout_scan">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="input_text">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:max">1</item>
    </style>

    <style name="input_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="input_edit.number" parent="input_edit">
        <item name="android:inputType">number</item>
    </style>

    <style name="input_edit.uri" parent="input_edit">
        <item name="android:inputType">textUri</item>
    </style>

    <style name="input_edit.none" parent="input_edit">
        <item name="android:inputType">none</item>
    </style>

    <style name="input_edit.text" parent="input_edit">
        <item name="android:inputType">text</item>
        <item name="android:digits">0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ
        </item>
    </style>

    <style name="input_clear_layout">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="input_clear_layout_scan">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>


</resources>
